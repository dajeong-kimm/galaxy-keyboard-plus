{
  "author": "SSAFY E201",
  "name": "mcp-web-app",
  "version": "1.1.2",
  "description": "Electron desktop wrapper around a single MCP-Filesystem server",
  "main": "main.js",
  "type": "commonjs",
  "scripts": {
    "dev": "electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder"
  },
  "dependencies": {
    "@modelcontextprotocol/server-filesystem": "^2025.3.28",
    "axios": "^1.8.4",
    "cross-spawn": "^7.0.6",
    "dotenv": "^16.5.0",
    "portfinder": "^1.0.32",
    "uuid": "^11.1.0"
  },
  "build": {
    "appId": "com.mcp.webapp",
    "productName": "MOCA",
    "npmRebuild": false,
    "asarUnpack": [
      "node_modules/@modelcontextprotocol/server-*/*"
    ],
    "files": [
      "!dist/",
      "!node_modules/.cache/"
    ],
    "win": {
      "target": "nsis"
    },
    "extraResources": [
      ".env"
    ]
  },
  "devDependencies": {
    "electron-builder": "^26.0.12",
    "electron": "^35.2.0"
  }
}
